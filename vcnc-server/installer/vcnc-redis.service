[Unit]
Description=Redis for VelStor vCNC

[Service]
Type=simple
ExecStart=/opt/velstor/current/bin/redis-server /opt/velstor/current/share/vcnc/vnc-server/config/vcnc-redis.conf --daemonize no
Restart=always
StandardOutput=syslog+console
StandardError=syslog+console
SyslogIdentifier=vcnc-redis
User=root
Group=root

[Install]
WantedBy=remote-fs.target
